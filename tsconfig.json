{
  "compilerOptions": {
    "target": "ES2021",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "moduleDetection": "force",
    "outDir": "build/esm",
    "sourceMap": true,
    "declaration": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    /* Temporarily disabled */
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["lib"]
}
